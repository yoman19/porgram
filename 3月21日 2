tup = (1, 2, 3, 4, 5)

lst = list(tup)

lst.extend([6, 7, 8])

updated_tup = tuple(lst)

print(f"更新後的tuple為: {updated_tup}")

target_number = 39  
guess = None

while guess != target_number:
    guess = int(input("猜一個正整數："))
    
    if guess > target_number:
        print("猜的太高了！")
    elif guess < target_number:
        print("猜的太低了！")
    else:
        print("恭喜你，猜對了！")
        break
